{
  "permissions": {
    "allow": [
      "Bash(npm run *)",
      "Bash(npx *)",
      "Bash(npm install *)",
      "Bash(npm ci)",
      "Bash(git status *)",
      "Bash(git diff *)",
      "Bash(git add *)",
      "Bash(git log *)",
      "Bash(git branch *)",
      "Bash(git checkout *)",
      "Bash(git stash *)",
      "Bash(docker compose *)",
      "Bash(docker build *)",
      "Bash(docker ps *)",
      "Bash(docker logs *)",
      "Read(**)",
      "Write(src/**)",
      "Write(tests/**)",
      "Write(*.md)",
      "Write(*.json)",
      "Write(*.yml)",
      "Write(*.yaml)",
      "Write(docker-compose.yml)",
      "Write(Dockerfile*)"
    ],
    "deny": [
      "Bash(rm -rf *)",
      "Bash(sudo *)",
      "Bash(curl * | bash)",
      "Bash(wget * | sh)",
      "Write(.env*)",
      "Write(*.pem)",
      "Write(*.key)",
      "Write(secrets/**)",
      "Read(.env*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/security-check.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/auto-format.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/notify.sh"
          }
        ]
      }
    ]
  }
}
